{% extends "layout.njk" %}

{% block content %}

    <div class="card container-table">

        <a href="/students/create">Novo</a>
       <table>
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Email</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>

                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background: url(
                            '{{student.avatar_url}}') no-repeat top center / cover"></span>
                            {{student.name}}
                        </td>
                        <td>{{student.area}}</td>
                        <td>
                            <a href="/students/{{student.id}}/edit">Editar</a>
                            <a href="/students/{{student.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
               
                
            </tbody>
        
        </table>
    </div>
{% endblock content %}