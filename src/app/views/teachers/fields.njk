<div class="item">
    <div><label for="avartar_url">Avatar</label></div>
    <div><input type="url" name="avatar_url" id="avatar_url" placehoder="http://"
    value= "{{teacher.avatar_url}}"></div>
</div>
<div class="item">
    <div><label for="name">Nome</label></div>
    <div><input type="text" name="name" id="name" placehoder="Preencha o nome completo"
    value="{{teacher.name}}"></div>
</div>

<div class="item">
    <div><label for="birth">Data de Nascimento</label></div>
    <div><input type="date" name="birth" id="birth"
    value="{{teacher.birth}}"></div>
</div>


<div class="item">
    <div><label for="education_level">Nivel de Escolaridade</label></div>
    <div>
        <select name="education_level" id="education_level" class="education_level"> 
            <option value="E">Ensino Médio Completo</option>
            <option value="S">Ensino Superior Completo</option>
            <option value="M">Mestrado</option>
            <option value="D">Doutorado</option> 
        </select>
    </div>
</div>


<div class="item">
    <div> 
        <label for="class_type">Tipo de Aula</label>
    </div>
    <div class="tipo-aula">
        <input type="radio" name="class_type" id="presencial" value="P"
        {% if teacher.class_type == 'P' %}
        checked
        {% endif %}> 
        <label for="presencial">Presencial</label><br>
        <input type="radio" name="class_type" id="distancia" value="D"
        {% if teacher.class_type == 'D' %}
        checked
        {% endif %}> 
        <label for="distancia">Á Distância</label>
    </div>
    
</div>

<div class="item">
    <div>
        <label for="subjects_taught">Área de Atuação</label>
    </div>
    <div>
        <input type="text" name="subjects_taught" id="subjects_taught" placehoder="Separe por virgulas a area de atuacao"
        value="{{teacher.subjects_taught}}">
    </div>
</div>

<button type="Submit">Salvar</button>