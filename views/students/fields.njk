            <option value="2F" {% if student.degree == "2F" %} selected {% endif %}>
                2&deg Ano Ensino Fundamental
            </option>
            <option value="3F" {% if student.degree == "3F" %} selected {% endif %}>
                3&deg Ano Ensino Fundamental
            </option>
            <option value="4F" {% if student.degree == "4F" %} selected {% endif %}>
                4&deg Ano Ensino Fundamental
            </option>
            <option value="5F" {% if student.degree == "5F" %} selected {% endif %}>
                5&deg Ano Ensino Fundamental
            </option>
            <option value="6F" {% if student.degree == "6F" %} selected {% endif %}>
                6&deg Ano Ensino Fundamental
            </option>
            <option value="7F" {% if student.degree == "7F" %} selected {% endif %}>
                7&deg Ano Ensino Fundamental
            </option>
            <option value="8F" {% if student.degree == "8F" %} selected {% endif %}>
                8&deg Ano Ensino Fundamental
            </option>
            <option value="9F" {% if student.degree == "9F" %} selected {% endif %}>
                9&deg Ano Ensino Fundamental
            </option>
            <option value="1M" {% if student.degree == "1M" %} selected {% endif %}>
                1&deg Ano Ensino Médio
            </option>
            <option value="2M" {% if student.degree == "2M" %} selected {% endif %}>
                2&deg Ano Ensino Médio
            </option>
            <option value="3M" {% if student.degree == "3M" %} selected {% endif %}>
                3&deg Ano Ensino Médio
