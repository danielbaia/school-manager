{% extends "layout.njk" %}

{% block content %}

    <div class="card">
         <section class="avatar" style="background: url('{{teacher.avatar_url}}') no-repeat center center / cover;">
        </section>
        <section class="details" >
            <form method="POST" action="/teachers?_method=PUT">
                <h3 class="title">Edit Teacher</h3>
            
                {% include 'teachers/fields.njk'%}

                <input type="hidden" name="id" value="{{teacher.id}}">
                
            </form>

            <form class="form-delete" method="POST" action="/teachers?_method=DELETE">
                <input type="hidden" name="id" value="{{teacher.id}}">
                <button type="submit"> Excluir</button>
            
            </form>
         <section>
    </div>
{% endblock content %}