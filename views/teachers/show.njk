{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar">
        </section>
        <section class="details">
            <h3 class="title">Detalhes</h3>
            <div>
                <div class="item">
                    <p>Nome completo</p>
                    <p>{{teacher.name}}</p>
                </div>
                <div class="item">
                    <p>Idade</p>
                    <p>{{teacher.age}} anos</p>
                </div>
                <div class="item">
                    <p>Grau de Escolaridade</p>
                    <p>{{teacher.degree}}</p>
                </div>
                <div class="item">
                    <p>Tipo de Aula</p>
                    <p>{{teacher.classes}}</p>
                </div>
                <div class="item">
                    <p>Acompanhamento</p>
                    <p>
                        {% for area in teacher.area %}
                            <span>{{area}}</span>
                        {% endfor %}
                    </p>
                </div>
                <div class="item">
                    <p>Desde</p>
                    <p>{{teacher.created_at}}</p>
                </div>
            </div>
        </section>
    </div>
{% endblock content %}ÃŸ